{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*",
        "./src/components/*",
        ]
    },
    "isolatedModules": false,
    "ignoreDeprecations": "5.0", // Added to ignore deprecation warnings
  }
}
